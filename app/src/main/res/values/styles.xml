<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/accent</item>
        <item name="android:textColorHighlight">@color/primary_light</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:colorBackground">@color/secondary_text</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="AppThemeSummary" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_summary</item>
        <item name="colorPrimaryDark">@color/primary_dark_summary</item>
        <item name="colorAccent">@color/accent_summary</item>
        <item name="colorButtonNormal">@color/accent_summary</item>
        <item name="android:textColorHighlight">@color/primary_light_summary</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:colorBackground">@color/secondary_text</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

    </style>

</resources>
